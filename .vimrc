set nocompatible
set noerrorbells
set visualbell
set number

set pastetoggle=<F10>

set backupdir=~/.vim/backups
set directory=~/.vim/swaps
set undodir=~/.vim/undo

set expandtab
set smarttab
set shiftwidth=2
set tabstop=2
set backspace=indent,eol,start
set encoding=utf-8 nobomb
set ttyfast
set title
set ruler 

set ai
set si

syntax on
set t_Co=256
colorscheme molokai
